<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    style="@style/Theme.WarehouseManagement">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="98dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Quản lý Kho"
        android:textAlignment="center"
        android:textColor="@color/space_cadet"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="98dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/warehouse_btn"
            android:layout_width="369dp"
            android:layout_height="92dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_azureich_white_radius_25"
            android:fontFamily="@font/roboto_medium"
            android:text="KHO"
            android:textColor="@color/space_cadet"
            android:textSize="30dp" />


        <Button
            android:id="@+id/product_btn"
            android:layout_width="369dp"
            android:layout_height="92dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_azureich_white_radius_25"
            android:fontFamily="@font/roboto_medium"
            android:text="VẬT TƯ"
            android:textColor="@color/space_cadet"
            android:textSize="30dp" />

        <Button
            android:id="@+id/receipt_btn"
            android:layout_width="369dp"
            android:layout_height="92dp"
            android:background="@drawable/bg_azureich_white_radius_25"
            android:fontFamily="@font/roboto_medium"
            android:text="PHIẾU NHẬP"
            android:textColor="@color/space_cadet"
            android:textSize="30dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/roboto_thin"
        android:text="Team11"
        android:textAlignment="center"
        android:textColor="@color/space_cadet"
        android:textSize="16dp"
        tools:ignore="HardcodedText" />
</LinearLayout>