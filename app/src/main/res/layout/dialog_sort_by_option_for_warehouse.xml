<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="MissingConstraints"
        android:background="@color/white">

        <include
            layout="@layout/group_sort_order_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="Sắp xếp theo"
            android:textColor="@color/steel_blue"
            android:textSize="24dp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radioBtnTheoMa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:buttonTint="@color/radio_button_color"
                android:checked="true"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"
                android:text="Mã kho"
                android:textColor="@color/space_cadet"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioBtnTheoTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:buttonTint="@color/radio_button_color"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"
                android:text="Tên kho"
                android:textColor="@color/space_cadet"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioBtnTheoDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/radio_button_color"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"
                android:text="Địa chỉ"
                android:textColor="@color/space_cadet"
                android:textSize="18sp" />

        </RadioGroup>

    <include
        layout="@layout/group_button_ok_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" />
    </LinearLayout>
