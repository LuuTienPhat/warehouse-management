<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.WarehouseManagement"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_azureich_white_no_radius"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvWarehouseId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:paddingLeft="12dp"
        android:text="K1"
        android:textAlignment="center"
        android:textColor="@color/space_cadet"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWarehouseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Kho Bình Chánh"
            android:textStyle="bold"
            android:textColor="@color/space_cadet"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvProductQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="0"
            android:textColor="@color/space_cadet"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>