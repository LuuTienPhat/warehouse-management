<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_azureich_white_radius_25"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvReceiptId"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@color/space_cadet"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvReceiptDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="20/06/2013"
                android:textColor="@color/space_cadet"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvWarehouseId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="(K1)"
                android:textColor="@color/space_cadet"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNumberOfProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="2 loại vật tư"
            android:textColor="@color/space_cadet"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>