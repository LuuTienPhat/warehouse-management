<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.WarehouseManagement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/inputGroup1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWarehouseId"
                style="@style/TextViewOfEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Mã kho" />

            <EditText
                android:id="@+id/etWarehouseId"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:hint="Mã kho"
                android:text="K1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputGroup2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWarehouseName"
                style="@style/TextViewOfEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Tên kho" />

            <EditText
                android:id="@+id/etWarehouseName"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="Tên kho"
                android:text="Kho Bình Chánh" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                style="@style/TextViewOfEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Số phiếu" />

            <EditText
                android:id="@+id/etReceiptId"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="Số phiếu"
                android:text="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv2"
                style="@style/TextViewOfEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Ngày lập" />

            <EditText
                android:id="@+id/etReceiptDate"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Ngày lập"
                android:inputType="text"
                android:text="19/03/2022" />
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/receipt_detail_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>