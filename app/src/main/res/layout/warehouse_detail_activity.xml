<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="21dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="start"
            android:text="Chi tiết"
            android:textAlignment="textStart"
            android:textColor="@color/space_cadet"
            android:textSize="30sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/lyUtils"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_edit_32" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_delete_32" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewOfEditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã kho" />

        <EditText
            android:id="@+id/etId"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:alpha="0.5"
            android:focusable="false"
            android:text="K1" />

        <TextView
            style="@style/TextViewWarningOfEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nhập mã kho"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewOfEditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Tên kho" />

        <EditText
            android:id="@+id/etName"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:alpha="0.5"
            android:text="Kho Bình Chánh" />

        <TextView
            android:id="@+id/tvWarehouseNameWarning"
            style="@style/TextViewWarningOfEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vui lòng nhập tên kho!"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewOfEditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Địa chỉ" />

        <EditText
            android:id="@+id/etAddress"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:alpha="0.5"
            android:text="95 Việt Phú, Bình Chánh, TPHCM" />

        <TextView
            android:id="@+id/tvWarehouseAddressWarning"
            style="@style/TextViewWarningOfEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vui lòng nhập địa chỉ!"
            android:visibility="gone" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include
        layout="@layout/group_button_ok_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp" />

</LinearLayout>